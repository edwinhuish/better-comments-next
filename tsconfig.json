{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es6"
    ],
    "rootDir": "src",
    "module": "commonjs",
    "strict": true,
    "strictNullChecks": true, /* enable all strict type-checking options */
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "out",
    "sourceMap": true /* Report errors on unused locals. */
  },
  "exclude": [
    "src/test",
    "node_modules",
    ".vscode-test"
  ]
}
