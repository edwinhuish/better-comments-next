{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2020",
      "WebWorker"
    ],
    "rootDir": ".",
    "module": "NodeNext",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "strict": true,
    "strictNullChecks": true, /* enable all strict type-checking options */
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true, /* Report errors on unused locals. */
    "skipLibCheck": true
  },
  "exclude": [
    "samples",
    "node_modules",
    ".vscode-test"
  ]
}
