{
    "publisher": "edwinhuish",
    "name": "better-comments-next",
    "displayName": "Better Comments Next",
    "version": "3.3.0",
    "description": "Improve your code commenting by annotating with alert, informational, TODOs, and more!",
    "author": {
        "name": "Edwin Xu"
    },
    "license": "MIT",
    "homepage": "https://github.com/edwinhuish/better-comments-next/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/edwinhuish/better-comments-next"
    },
    "bugs": "https://github.com/edwinhuish/better-comments-next/issues",
    "categories": [
        "Formatters"
    ],
    "main": "./dist/extension.js",
    "icon": "./static/icon.png",
    "sponsor": {
        "url": "https://github.com/sponsors/edwinhuish"
    },
    "engines": {
        "vscode": "^1.65.0"
    },
    "extensionKind": [
        "workspace"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "galleryBanner": {
        "color": "#e3f4ff",
        "theme": "light"
    },
    "browser": "./dist/extension.web.js",
    "contributes": {
        "configuration": {
            "title": "Better Comments Next",
            "properties": {
                "better-comments.multilineComments": {
                    "type": "boolean",
                    "description": "Whether the multiline comment highlighter should be active",
                    "default": true
                },
                "better-comments.highlightPlainText": {
                    "type": "boolean",
                    "description": "Whether the plaintext comment highlighter should be active",
                    "default": false
                },
                "better-comments.tags": {
                    "type": "array",
                    "description": "Tags which are used to color the comments.",
                    "items": {
                        "type": "object",
                        "title": "tag item",
                        "properties": {
                            "tag": {
                                "type": [
                                    "string",
                                    "array"
                                ],
                                "description": "Name of tag, case insensitive, could be string or string[]",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "color": {
                                "type": "string",
                                "description": "Font color, eg: #FF2D00"
                            },
                            "strikethrough": {
                                "type": "boolean",
                                "description": "Enable text strikethrough."
                            },
                            "underline": {
                                "type": "boolean",
                                "description": "Enable text underline."
                            },
                            "backgroundColor": {
                                "type": "string",
                                "description": "Background color, eg: transparent"
                            },
                            "bold": {
                                "type": "boolean",
                                "description": "Set text font style to bold."
                            },
                            "italic": {
                                "type": "boolean",
                                "description": "Set text font style to italic."
                            }
                        }
                    },
                    "default": [
                        {
                            "tag": "#",
                            "color": "#18b566",
                            "strikethrough": false,
                            "underline": false,
                            "backgroundColor": "transparent",
                            "bold": true,
                            "italic": false
                        },
                        {
                            "tag": "!",
                            "color": "#FF2D00",
                            "strikethrough": false,
                            "underline": false,
                            "backgroundColor": "transparent",
                            "bold": false,
                            "italic": false
                        },
                        {
                            "tag": "?",
                            "color": "#3498DB",
                            "strikethrough": false,
                            "underline": false,
                            "backgroundColor": "transparent",
                            "bold": false,
                            "italic": false
                        },
                        {
                            "tag": "//",
                            "color": "#474747",
                            "strikethrough": true,
                            "underline": false,
                            "backgroundColor": "transparent",
                            "bold": false,
                            "italic": false
                        },
                        {
                            "tag": [
                                "todo",
                                "to-do"
                            ],
                            "color": "#FF8C00",
                            "strikethrough": false,
                            "underline": false,
                            "backgroundColor": "transparent",
                            "bold": false,
                            "italic": false
                        },
                        {
                            "tag": "*",
                            "color": "#98C379",
                            "strikethrough": false,
                            "underline": false,
                            "backgroundColor": "transparent",
                            "bold": false,
                            "italic": false
                        }
                    ]
                },
                "better-comments.tagsLight": {
                    "type": "array",
                    "description": "Overwrite tags options for light themes",
                    "items": {
                        "type": "object",
                        "title": "tag item",
                        "properties": {
                            "tag": {
                                "type": [
                                    "string",
                                    "array"
                                ],
                                "description": "Name of tag, case insensitive, could be string or string[]",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "color": {
                                "type": "string",
                                "description": "Font color, eg: #FF2D00"
                            },
                            "strikethrough": {
                                "type": "boolean",
                                "description": "Enable text strikethrough."
                            },
                            "underline": {
                                "type": "boolean",
                                "description": "Enable text underline."
                            },
                            "backgroundColor": {
                                "type": "string",
                                "description": "Background color, eg: transparent"
                            },
                            "bold": {
                                "type": "boolean",
                                "description": "Set text font style to bold."
                            },
                            "italic": {
                                "type": "boolean",
                                "description": "Set text font style to italic."
                            }
                        }
                    },
                    "default": []
                },
                "better-comments.tagsDark": {
                    "type": "array",
                    "description": "Overwrite tags options for dark themes",
                    "items": {
                        "type": "object",
                        "title": "tag item",
                        "properties": {
                            "tag": {
                                "type": [
                                    "string",
                                    "array"
                                ],
                                "description": "Name of tag, case insensitive, could be string or string[]",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "color": {
                                "type": "string",
                                "description": "Font color, eg: #FF2D00"
                            },
                            "strikethrough": {
                                "type": "boolean",
                                "description": "Enable text strikethrough."
                            },
                            "underline": {
                                "type": "boolean",
                                "description": "Enable text underline."
                            },
                            "backgroundColor": {
                                "type": "string",
                                "description": "Background color, eg: transparent"
                            },
                            "bold": {
                                "type": "boolean",
                                "description": "Set text font style to bold."
                            },
                            "italic": {
                                "type": "boolean",
                                "description": "Set text font style to italic."
                            }
                        }
                    },
                    "default": []
                }
            }
        }
    },
    "scripts": {
        "clean:dist": "rimraf dist",
        "vscode:prepublish": "npm run package",
        "package": "npm run clean:dist && npm run lint && npm run build && npm run build-web",
        "build": "tsup --config=build/tsup.node.js",
        "watch": "tsup --config=build/tsup.node.js --watch",
        "build-web": "tsup --config=build/tsup.web.js",
        "watch-web": "tsup --config=build/tsup.web.js --watch",
        "lint": "npm run lint:type && npm run lint:eslint",
        "lint:type": "tsc -p . --noEmit",
        "lint:eslint": "eslint --cache --max-warnings 0 \"{src,build}/**/*.{ts,js}\" --fix"
    },
    "dependencies": {
        "json5": "^2.2.3"
    },
    "devDependencies": {
        "@eslint/compat": "^1.2.3",
        "@eslint/js": "^9.16.0",
        "@types/node": "^17.0.23",
        "@types/vscode": "^1.65.0",
        "@typescript-eslint/parser": "^8.17.0",
        "@vscode/vsce": "^2.21.1",
        "eslint": "^9.16.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.2.1",
        "husky": "^8.0.3",
        "lint-staged": "^15.1.0",
        "ovsx": "^0.8.3",
        "path-browserify": "^1.0.1",
        "process": "^0.11.10",
        "rimraf": "^5.0.5",
        "tsup": "^8.0.2",
        "typescript": "^5.5.4",
        "typescript-eslint": "^8"
    }
}